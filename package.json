{
    "private": true,
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "watch": "webpack --watch --mode=development",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "build": "npm --prefix ${npm_config_path} install && npm --prefix ${npm_config_path} run build && rm -rf ${npm_config_path}/node_modules",
        "webpack-dev": "webpack --mode=development"
    },
    "devDependencies": {
        "axios": "^0.21",
        "deepmerge": "^4.2.2",
        "laravel-mix": "^6.0.6",
        "lodash": "^4.17.19",
        "postcss": "^8.1.14",
        "sass": "~1.32",
        "sass-loader": "^13.1.0",
        "vue-loader": "^15.10.0",
        "vue-template-compiler": "^2.6.12",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.7.0"
    },
    "dependencies": {
        "vue": "^2.6.4",
        "vuetify": "^2.6.12"
    }
}
